<Window x:Class="PrcpConfigUtility.CopyFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrcpConfigUtility"
        mc:Ignorable="d"
        Title="Copy File" Height="200" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Enter the new path and file name: " HorizontalAlignment="Center" FontWeight="Bold" FontSize="14" Margin="20"/>
            <TextBox x:Name="CopyFileTextBox" Width="350"/>
            <DockPanel Margin="0,30,0,0">
                <Button x:Name="CopySelectCancel" Content="Cancel" Width="100" HorizontalAlignment="Center" Margin="80,0,0,0" Click="CopySelectCancel_Click"/>
                <Button x:Name="CopySelectOK"  Content="OK" Width="100" HorizontalAlignment="Center" Margin="0,0,50,0" Click="CopySelectOK_Click"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
