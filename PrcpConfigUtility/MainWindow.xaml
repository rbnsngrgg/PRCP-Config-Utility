<Window x:Class="PrcpConfigUtility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrcpConfigUtility"
        mc:Ignorable="d"
        Title="PRCP Config Manager" Height="800" Width="1200" MinHeight="600" MinWidth="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <!--Fixure Tree-->
        <Grid Grid.Row="1" Grid.Column="0">
            <GroupBox Header="Fixtures">
                <TreeView x:Name="FixtureTreeView">
                
                </TreeView>
            </GroupBox>
        </Grid>
        <!--Config editing area-->
        <GroupBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Header="Config">
            <Grid>
                <TextBox x:Name="ConfigEditorTextBox" Margin="10,10,10,10">
                    
                </TextBox>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
